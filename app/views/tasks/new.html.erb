<h1>New Task</h1>

<%= form_for @task do |f| %>
  <%= f.label :title %><br/>
  <%= f.text_area :title, rows:"5", cols:"60" %><br/>
  <br>
  <%= f.label :details %><br/>
  <%= f.text_area :details, rows:"5", cols:"60" %><br/>
  <%= f.submit %><br/>
<% end %>

<%= link_to "Back to list", tasks_path%>
