<h1>My tasks</h1>
<ul>
<% @tasks.each do |task|%>
<li><%if task.completed%>
 <input type='checkbox' checked>
 <% else %>
 <input type='checkbox' >
 <% end %>
  <%= link_to task.title, task_path(task) %><%= link_to image_tag("delete.png", size:"12x15"), task_path(task), method: :delete, data: {confirm: "Delete #{task.title}?"} %>
</li>
<% end %>
</ul>

<%= link_to "Add a new task", tasks_new_path%>
